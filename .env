# .env
# ============================================
# DocAI RAG Application Configuration
# ============================================

# Application Settings
APP_NAME=DocAI
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# LLM Provider (Ollama - already running)
LLM_PROVIDER=ollama
LLM_PROVIDER_BASE_URL=http://localhost:11434
LLM_MODEL_NAME=zephyr:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Embedding Model (Ollama compatible)
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database (Milvus - optional, can use FAISS fallback)
VECTOR_STORE_TYPE=faiss
# MILVUS_HOST=localhost
# MILVUS_PORT=19530
# MILVUS_COLLECTION_NAME=docai_embeddings

# MongoDB (Chat History)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=docai
MONGODB_COLLECTION=chat_history

# Redis (Cache)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# File Upload Settings
UPLOAD_DIR=./uploadfiles
PDF_UPLOAD_DIR=./uploadfiles/pdf
ALLOWED_EXTENSIONS=["pdf"]
MAX_FILE_SIZE=10485760

# Text Chunking Settings
CHUNKING_STRATEGY=hierarchical
HIERARCHICAL_CHUNK_SIZES=[2000, 1000, 500]
HIERARCHICAL_OVERLAP=100
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
CHUNK_SEPARATORS=["\n\n", "\n", " ", ""]

# Retrieval Settings
RETRIEVAL_TOP_K=5
ENABLE_MULTIVECTOR_RETRIEVAL=True

# SQLite Database (File Metadata)
DATABASE_URL=sqlite:///./data/docai.db

# CORS Settings
CORS_ORIGINS=["*"]

# Server Settings
HOST=0.0.0.0
PORT=8000
